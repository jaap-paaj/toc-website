{
  "name": "toc-content-studio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:canon": "./scripts/audit-canon.sh",
    "lint:spacing": "node scripts/lint-spacing.js",
    "audit:typography": "! rg -n --hidden --glob '!**/.next/**' --glob '!**/node_modules/**' --glob '!src/design-system/tokens/typography.ts' --glob '!src/design-system/components/Typography.tsx' --glob '!src/app/globals.css' --glob '!**/*.md' '(\\btext-(2?xs|sm|base|lg|xl|2xl|3xl|4xl|5xl|6xl|7xl|8xl|9xl)\\b|\\bfont-(sans|serif|mono|thin|extralight|light|normal|medium|semibold|bold|extrabold|black)\\b|\\bleading-|\\btracking-|\\buppercase\\b|\\blowercase\\b|\\bcapitalize\\b)' src | grep -v 'lint:allowed'",
    "audit:surfaces": "! rg -n --hidden --glob '!**/.next/**' --glob '!**/node_modules/**' --glob '!src/design-system/tokens/surfaces.ts' --glob '!src/app/globals.css' '(\\brounded-(sm|md|lg|xl|2xl|3xl)\\b|\\bshadow-(sm|md|lg|xl|2xl)\\b)' src | grep -v 'lint:allowed'",
    "audit:spacing": "! rg -n --hidden --glob '!**/.next/**' --glob '!**/node_modules/**' --glob '**/modules/*.tsx' --glob 'src/components/sections/*.tsx' '(\\bpy-\\d+\\b|\\bpt-\\d+\\b|\\bpb-\\d+\\b|\\bmy-\\d+\\b|\\bmt-\\d+\\b|\\bmb-\\d+\\b)' src | grep -v 'lint:allowed' | grep -v 'py-0'",
    "audit:states": "! rg -n --hidden --glob '!**/.next/**' --glob '!**/node_modules/**' '(hover:text-white|text-white/60|focus-visible:ring-2)' src | grep -v 'lint:allowed'",
    "audit:color:hex": "! rg -n --hidden --glob '!**/.next/**' --glob '!**/node_modules/**' --glob '!src/app/globals.css' --glob '!tailwind.config.*' --glob '!src/design-system/tokens/**' '(#([0-9a-fA-F]{3,8})\\b|\\brgb\\(|\\brgba\\(|\\bhsl\\(|\\bhsla\\()' src",
    "audit:color:palette": "! rg -n --hidden --glob '!**/.next/**' --glob '!**/node_modules/**' --glob '!src/design-system/tokens/**' --glob '!**/*.md' '(\\b(text|bg|border|ring)-(slate|gray|zinc|neutral|stone|red|orange|amber|yellow|lime|green|emerald|teal|cyan|sky|blue|indigo|violet|purple|fuchsia|pink|rose)-(50|100|200|300|400|500|600|700|800|900|950)\\b)' src",
    "audit:color": "npm run audit:color:hex && npm run audit:color:palette",
    "audit:theme": "! rg -n --hidden --glob '!**/.next/**' --glob '!**/node_modules/**' '(^|\\s)dark:' src | grep -v 'lint:allowed'",
    "audit:pages": "! rg -n --hidden --glob '!**/.next/**' --glob '!**/node_modules/**' '(\\bgrid-cols-\\d+\\b|\\bcol-span-\\d+\\b|\\bcol-start-\\d+\\b|\\bcol-end-\\d+\\b)' src/app/**/page.tsx",
    "audit:content-shape": "! rg -n --hidden --glob '!**/.next/**' --glob '!**/node_modules/**' '(headingLabel|categoryLabel|ctaLabel|ctaHref|linkText|linkHref|headerConfig|contentConfig|copyStyle)\\b' src",
    "audit:all": "npm run audit:typography && npm run audit:surfaces && npm run audit:spacing && npm run audit:states && npm run audit:color && npm run audit:theme && npm run audit:pages && npm run audit:content-shape"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.555.0",
    "next": "16.0.7",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "playwright": "^1.57.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}